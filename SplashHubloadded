task.wait(2) -- 起動待ち

local success, err = pcall(function()

    -- ライブラリ読み込み
    local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
    local Window = Library.CreateLib("Custom Menu", "BloodTheme")

    -- まず Aim タブ「だけ」作る（ここでは空）
    local AimTab = Window:NewTab("Aim")

    -- ここで Aim セクションを先に作成（まだ描画しない）
    local AimSection = AimTab:NewSection("Aim Settings")

    -- ▼ Aim トグルをここで全部生成（これが読み込まれないと Aim タブは描画されない）
    local togglesLoaded = false

    -- AimBot
    local AimBotToggle = AimSection:NewToggle("Aimbot", "Auto aim within 10 studs", function(state)
        getgenv().AimbotEnabled = state
    end)

    -- Silent Aim
    local SilentToggle = AimSection:NewToggle("Silent Aim", "Auto lock + auto click", function(state)
        getgenv().SilentAim = state
    end)

    -- ここまで来たら「トグル生成完了」
    togglesLoaded = true

    -- Aimタブの描画をここで強制更新
    Library:Notify("Aim Loaded", "Aim settings are now active!", 3)

end)

if not success then
    warn("UI Load Error: "..tostring(err))
end
