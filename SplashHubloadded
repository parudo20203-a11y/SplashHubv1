task.delay(2, function() -- ここでAimタブの描画タイミングを遅延させる

    if not Window then return end  -- 安全策
    
    local AimTab = Window:CreateTab("Aim", 4483362458)
    if not AimTab then return end  -- さらに安全策

    local AimSection = AimTab:CreateSection("Aim Settings")
    if not AimSection then return end

    --========= AimBot =========--
    AimSection:CreateToggle({
        Name = "AimBot",
        CurrentValue = false,
        Callback = function(v)
            _G.AimBot = v
        end,
    })

    --========= Silent Aim =========--
    AimSection:CreateToggle({
        Name = "Silent Aim",
        CurrentValue = false,
        Callback = function(v)
            _G.SilentAim = v
        end,
    })

    --========= Color Pickers（絶対に Color3 指定）=========--
    local defaultColor = Color3.fromRGB(255, 255, 255)

    AimSection:CreateColorPicker({
        Name = "Cloud Color",
        Color = defaultColor,
        Callback = function(color)
            game.Lighting.Atmosphere.Color = color
        end,
    })

    AimSection:CreateColorPicker({
        Name = "All Part Color",
        Color = defaultColor,
        Callback = function(color)
            for _,p in next, workspace:GetDescendants() do
                if p:IsA("BasePart") then
                    p.Color = color
                end
            end
        end,
    })

end)
